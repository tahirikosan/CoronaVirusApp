<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoronaActivity">

    <ImageView
        android:id="@+id/iv_health"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cv_notification"
        android:src="@drawable/health"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/DarkGreen"
        app:cardCornerRadius="10dp">


        <TextView
            android:id="@+id/tv_warning_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varelaround_regular"
            android:layout_margin="10dp"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textAlignment="center"
            android:text="@string/notificationContent" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>