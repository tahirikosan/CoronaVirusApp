<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">


    <ImageView
        android:id="@+id/iv_corona_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="150dp"
        android:src="@drawable/corona_info"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/cv_notification"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_turkey_flag"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/turkey_flag"/>

        <ImageView
            android:id="@+id/iv_america_flag"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/america_flag"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/LightPurple"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        app:cardCornerRadius="10dp">


        <TextView
            android:id="@+id/tv_warning_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varelaround_regular"
            android:layout_margin="10dp"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textAlignment="center"
            android:text="Please choose a language" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>